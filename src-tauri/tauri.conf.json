{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Study Quiz",
  "version": "0.1.0",
  "identifier": "com.study.quiz",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
          "title": "Study Quiz",
          "width": 1024,
          "height": 700,
        "resizable": true,
        "dragDropEnabled": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "nsis"],
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
